modules = ["postgresql-16", "python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["alsa-lib", "cargo", "ffmpeg", "ffmpeg-full", "glibcLocales", "libGL", "libGLU", "libiconv", "libxcrypt", "openssl", "pkg-config", "portaudio", "postgresql", "pulseaudio", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34105
externalPort = 3001

[[ports]]
localPort = 43753
externalPort = 3000

[[ports]]
localPort = 45607
externalPort = 3002

[agent]
integrations = ["python_database:1.0.0", "python_openai:1.0.0", "python_log_in_with_replit:1.0.0"]
